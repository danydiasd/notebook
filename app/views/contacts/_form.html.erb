<%= form_for(@contact, html: {class: 'white-pink'}) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<h2>Contatos</h2>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :kind_id %><br>
    <%= collection_select(:contact, :kind_id, @kind, :id, :description)%>
  </div>
  <%= f.fields_for :address do |a|%>
    <div class="field">
      <%= f.label :street %><br>
       <%= a.text_field :street%>
    </div>
    <div class="field">
      <%= f.label :city%><br>
      <%= a.text_field :city%>
    </div>
    <div class="field">
      <%= f.label :state%><br>
      <%= a.text_field :state%>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rmk %><br>
    <%= f.text_area :rmk %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar", class: "button"%>

  </div>
<% end %>
